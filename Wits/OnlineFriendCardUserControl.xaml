<UserControl x:Class="Wits.OnlineFriendCardUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wits"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="480">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" MinWidth="100"/>
                <ColumnDefinition Width="380"/>
            </Grid.ColumnDefinitions>

            <Label x:Name="labelFriendUsername" Content="username" Foreground="White" FontFamily="Neon Tubes 2" FontSize="23" VerticalContentAlignment="Center" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="48" Width="360"/>
            <Image x:Name="imageFriendProfile" HorizontalAlignment="Left" Height="80" VerticalAlignment="Top" Width="80" Margin="8,7,0,0"/>

        </Grid>
        <Border BorderBrush="#40f2fe" BorderThickness="4" CornerRadius="10"/>
    </Grid>
</UserControl>
